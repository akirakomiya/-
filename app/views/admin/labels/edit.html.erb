<%=render 'header/manager_head'%>
<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<% if @label.errors.any? %>
				<div id="error_explanation">
              		<h2><%= @label.errors.count %>errors prohibited this obj from being saved</h2>
             	</div>
            <% end %>
            <% @label.errors.full_messages.each do |message| %>
				<div class="form-error">
              		<%= message %>
             	</div>
            <% end %>
			<h1>編集    id:[<%= @label.id %>]</h1><br><br>
			<h2>レーベル名</h2>
			<%= form_for @label,:url => {:action => :update} do |f| %>
				<%= f.text_field :name, autofocus: true %>
				<%= f.submit "更新", class: "btn btn-primary" %>
			<% end %>
			<%= link_to "キャンセル", admin_labels_path,class: "btn btn-success" %>
		</div>
	</div>
</div>
<%=render 'footer/footer'%>