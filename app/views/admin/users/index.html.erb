<%=render 'header/manager_head'%>
<h1>ユーザー一覧</h1>
<div class="container">
  <div class="row">
     <div class="col-xs-12">
     	<table>
      <thead>
       <tr>
         <th>ID</th>
          <th>メールアドレス</th>
          <th></th>
        </tr>
      </thead>
     <tbody>
     <% @users.each do |user| %>
      <% if user.is_deleted == false %>
      <tr>
       <td><%= user.id %></td>
       <td><%=user.email%></td>
       <td class="rr"><%=link_to "編集", edit_admin_user_path(user.id),class: "edit_#{user.id}" %>
       </td>
       <td class="rr"><%=link_to "詳細", admin_user_path(user.id),class: "show_#{user.id}" %>
       </td>
       <td class="rr">
        <%= link_to "退会", admin_user_path(user.id), method: :delete %>
              </td>
       </td>
     </tr>
     <% end %>
     <% end %>
  </tbody>
      </table>
　　　</div>
  </div>
</div>
