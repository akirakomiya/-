<%=render 'header/manager_head'%>
<h1>詳細</h1>
<%=link_to "編集", edit_admin_user_path %>
<%=link_to "一覧へ", admin_users_path %>
<div class="container">
 <div class="row">
    <div class="col-xs-12">
      <table>
       <tr>
        <th>ユーザーID</th>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <th>名前(漢字)</th>
        <td><%= @user.first_name %> <%= @user.last_name %></td>
      </tr>
      <tr>
        <th>名前(カナ)</th>
        <td><%= @user.first_name_kana %><% @user.last_name_kana %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @user.address %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @user.post_number %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @user.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
       </tr>
      </table>
     </div>
    </div>
  </div>