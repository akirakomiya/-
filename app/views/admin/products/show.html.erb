<div class="product_title_group">
<h1>商品の詳細</h1>
<%=link_to (admin_product_edit_path) do%><div class="to_button">編集</div><% end %>
<%=link_to (admin_product_path) do%><div class="to_button">一覧へ</div><% end %>
</div>
<%=attachment_image_tag product,:jacket_image,:fill,60,60,:fallback: "noimage.png",style:"width:40px;height:40px;"%>
<table class="main_contents_group">
    <tr>
    <td>アルバム名</td>
    <td><%=@product.album%></td>
    </tr>
    <tr>
    <td>アーティスト名</td>
    <td><%=@product.artist%></td>
    </tr>
    <tr>
    <td>レーベル名</td>
    <td><%=@product.label%></td>
    </tr>
    <tr>
    <td>ジャンル名</td>
    <td><%=@product.genre%></td>
    </tr>
    <tr>
    <td>発売日</td>
    <td><%=@product.released_date%></td>
    </tr>
    <tr>
    <td>価格</td>
    <td><%=@product.price%></td>
    </tr>
    <tr>
    <td>曲名</td>
    <td>
        <%=@product.Disk.all.each do |disk|%>
            <%=disk.name%>
            <%=disk.song.all.each do |song|%>
                <%=song.name%>
            <% end %>
        <% end %>
    </td>
    </tr>
    <tr>
    <td>在庫数</td>
    <td><%=@product.stock_quantity%></td>
    </tr>
    <tr>
    <td>ステータス</td>
    <td><%=@product.status%></td>
    </tr>
</table>
<div class="contetns_end_group">
    <%=link_to (admin_product_edit_path) do%><div class="to_button">編集</div><% end %>
    <%=link_to (admin_product_path) do%><div class="to_button">一覧へ</div><% end %>
</div>
